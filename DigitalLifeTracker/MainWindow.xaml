<Window x:Class="DigitalLifeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalLifeTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="38"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="StartTracking"
                Grid.Row="0" Content="Start"
                Click="StartTracking_OnClick"/>
        <Button x:Name="StopTracking"
                Grid.Row="1" Content="Stop"
                Click="StopTracking_OnClick"/>
        <TextBox x:Name="LogBox"
                 Grid.Row="2"
                 Margin="3"
                 FontSize="10"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
